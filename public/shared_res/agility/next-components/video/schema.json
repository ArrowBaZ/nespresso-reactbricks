{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Video",
  "required": [
    "a11y_play_video",
    "video_id",
    "video_mobile",
    "display_ui_controls",
    "cc_policy_language",
    "video_service"
  ],
  "options": {
    "collapsed": true
  },
  "properties": {
    "a11y_play_video": {
      "type": "string",
      "title": "a11y Play Video",
      "default": "Play video"
    },
    "video_id": {
      "type": "string",
      "title": "Video provider ID",
      "description": "Video id of the choose video service",
      "default": "Nl0qvx8Pv4w"
    },
    "video_mobile": {
      "type": "string",
      "title": "Video provider ID (Mobile)",
      "description": "Video id of the choose video service for mobile devices (if different)",
      "default": ""
    },
    "display_ui_controls": {
      "type": "string",
      "title": "Video UI Controls",
      "description": "Video service (Youtube)",
      "options": {
        "enum_titles": [
          "Yes",
          "No"
        ]
      },
      "enum": [
        "1",
        "0"
      ],
      "default": "1"
    },
    "cc_policy_language": {
      "type": "string",
      "title": "Language of Closed caption",
      "description": "Language of closed caption of Youtube video, Ex- es-Es, en",
      "default": ""
    },
    "video_service": {
      "type": "string",
      "title": "Video services",
      "description": "Video service (Youtube, Youku)",
      "options": {
        "enum_titles": [
          "Youtube",
          "Youku"
        ]
      },
      "enum": [
        "youtube",
        "youku"
      ],
      "default": "youtube"
    }
  }
}