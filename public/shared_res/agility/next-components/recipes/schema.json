{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Recipes",
  "description": "This component is used in the Coffee PDP. The main purpose of this component is to inform the user about recipes that can be done using the main product being displayed on the page (ie. recipes related to Ispirazione Italia Venezia).  https://wiki.nespresso.com/x/MBEHCQ",
  "properties": {
    "copywriting": {
      "type": "object",
      "title": "Copy writing",
      "properties": {
        "heading": {
          "type": "string",
          "description": "Recipe title",
          "default": "Cook with ispirazione venezia"
        },
        "description": {
          "type": "string",
          "description": "Recipe description",
          "default": "<p>Treat yourself to signature recipe for Nespresso.</p><p>Iced espresso and coconut combine to create a fresh and indulgent coffee drink, topped off with a touch of cotton candy.</p>"
        },
        "recipes": {
          "type": "array",
          "description": "Recipes list",
          "options": {
            "collapsed": true
          },
          "items": {
            "type": "object",
            "headerTemplate": "{{ i1 }} - {{ self.card.heading }}",
            "options": {
              "collapsed": true
            },
            "properties": {
              "modal": {
                "type": "object",
                "options": {
                  "collapsed": true
                },
                "properties": {
                  "header": {
                    "type": "object",
                    "options": {
                      "collapsed": true
                    },
                    "title": "Header",
                    "required": [
                      "subtitle",
                      "metas"
                    ],
                    "properties": {
                      "heading": {
                        "type": "string",
                        "title": "Recipe title",
                        "default": "Iced Latte Salted Caramel"
                      },
                      "subtitle": {
                        "type": "string",
                        "title": "Recipe subtitle",
                        "default": "Easy to create, easy to enjoy. It’s all about having a refreshing moment with Ice Leggero and this tasteful iced Caramel Latte."
                      },
                      "metas": {
                        "type": "object",
                        "options": {
                          "collapsed": true
                        },
                        "title": "Recipes meta data",
                        "required": [
                          "time",
                          "difficulty"
                        ],
                        "properties": {
                          "time": {
                            "type": "string",
                            "title": "Amount of time required",
                            "default": "2 min"
                          },
                          "difficulty": {
                            "type": "string",
                            "title": "Difficulty",
                            "default": "Easy"
                          }
                        }
                      }
                    }
                  },
                  "requirements": {
                    "type": "object",
                    "title": "Recipe requirements",
                    "options": {
                      "collapsed": true
                    },
                    "required": [
                      "ingredients",
                      "materials"
                    ],
                    "properties": {
                      "heading": {
                        "type": "string",
                        "title": "Requirements title",
                        "default": "What you need"
                      },
                      "ingredients": {
                        "type": "object",
                        "options": {
                          "collapsed": true
                        },
                        "title": "Recipe ingredients",
                        "required": [
                          "items"
                        ],
                        "properties": {
                          "heading": {
                            "type": "string",
                            "title": "Ingredients list title",
                            "default": "Ingredients"
                          },
                          "items": {
                            "type": "array",
                            "title": "Ingredients list",
                            "options": {
                              "collapsed": true
                            },
                            "items": {
                              "type": "object",
                              "required": [
                                "label"
                              ],
                              "headerTemplate": "{{ i1 }} - {{ self.label }}",
                              "properties": {
                                "label": {
                                  "type": "string",
                                  "title": "Ingredient label",
                                  "default": "Ginger"
                                },
                                "proportion": {
                                  "type": "string",
                                  "title": "Ingredient proportion",
                                  "default": "10gr"
                                }
                              }
                            }
                          }
                        }
                      },
                      "materials": {
                        "type": "object",
                        "options": {
                          "collapsed": true
                        },
                        "title": "Recipe materials",
                        "required": [
                          "items"
                        ],
                        "properties": {
                          "heading": {
                            "type": "string",
                            "title": "Materials list title",
                            "default": "Materials"
                          },
                          "items": {
                            "type": "array",
                            "options": {
                              "collapsed": true
                            },
                            "title": "Materials list",
                            "items": {
                              "type": "object",
                              "required": [
                                "label"
                              ],
                              "headerTemplate": "{{ i1 }} - {{ self.label }}",
                              "properties": {
                                "label": {
                                  "type": "string",
                                  "title": "Material label",
                                  "default": "Vertuo Coffee Mug"
                                },
                                "visual": {
                                  "type": "object",
                                  "required": [
                                    "src",
                                    "alt"
                                  ],
                                  "properties": {
                                    "src": {
                                      "type": "object",
                                      "required": [
                                        "desktop"
                                      ],
                                      "options": {
                                        "collapsed": true
                                      },
                                      "title": "Visual source",
                                      "properties": {
                                        "desktop": {
                                          "type": "string",
                                          "title": "Desktop visual source",
                                          "default": "/shared_res/agility/next-components/assets/recipes/material.png"
                                        }
                                      }
                                    },
                                    "alt": {
                                      "type": "string",
                                      "title": "Visual alternative text",
                                      "default": "Vertuo Coffee Mug"
                                    }
                                  },
                                  "options": {
                                    "collapsed": true
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  },
                  "instructions": {
                    "type": "object",
                    "options": {
                      "collapsed": true
                    },
                    "title": "Recipe instructions",
                    "required": [
                      "steps"
                    ],
                    "properties": {
                      "heading": {
                        "type": "string",
                        "title": "Instructions title",
                        "default": "How to make"
                      },
                      "steps": {
                        "type": "array",
                        "options": {
                          "collapsed": true
                        },
                        "title": "Instructions steps",
                        "items": {
                          "type": "object",
                          "required": [
                            "substeps"
                          ],
                          "headerTemplate": "Step {{ i1 }} - {{ self.heading }}",
                          "properties": {
                            "heading": {
                              "type": "string",
                              "title": "Step title",
                              "default": "For the vanilla coffee oil"
                            },
                            "substeps": {
                              "type": "array",
                              "title": "Sub steps",
                              "items": {
                                "type": "object",
                                "required": [
                                  "text"
                                ],
                                "headerTemplate": "Substep {{ i1 }}",
                                "properties": {
                                  "text": {
                                    "type": "string",
                                    "title": "Substep text",
                                    "default": "Peel the squash"
                                  },
                                  "visual": {
                                    "type": "object",
                                    "required": [
                                      "src",
                                      "alt"
                                    ],
                                    "properties": {
                                      "src": {
                                        "type": "object",
                                        "required": [
                                          "desktop"
                                        ],
                                        "options": {
                                          "collapsed": true
                                        },
                                        "title": "Visual source",
                                        "properties": {
                                          "desktop": {
                                            "type": "string",
                                            "title": "Desktop visual source",
                                            "default": "/shared_res/agility/next-components/assets/recipes/visual.png"
                                          }
                                        }
                                      },
                                      "alt": {
                                        "type": "string",
                                        "title": "Visual alternative text",
                                        "default": "Squash"
                                      }
                                    },
                                    "options": {
                                      "collapsed": true
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  },
                  "visual": {
                    "type": "object",
                    "required": [
                      "src",
                      "alt"
                    ],
                    "properties": {
                      "src": {
                        "type": "object",
                        "required": [
                          "desktop"
                        ],
                        "options": {
                          "collapsed": true
                        },
                        "title": "Visual source",
                        "properties": {
                          "mobile": {
                            "type": "string",
                            "title": "Mobile visual source",
                            "default": "/shared_res/agility/next-components/assets/recipes/video_S.png"
                          },
                          "desktop": {
                            "type": "string",
                            "title": "Desktop visual source",
                            "default": "/shared_res/agility/next-components/assets/recipes/video_L.png"
                          }
                        }
                      },
                      "alt": {
                        "type": "string",
                        "title": "Visual alternative text",
                        "default": "Loyalty program"
                      }
                    },
                    "options": {
                      "collapsed": true
                    }
                  },
                  "link": {
                    "type": "object",
                    "title": "Link",
                    "options": {
                      "collapsed": true
                    },
                    "required": [
                      "label",
                      "target"
                    ],
                    "properties": {
                      "label": {
                        "type": "string",
                        "title": "Link label",
                        "default": "Go to recipe page"
                      },
                      "target": {
                        "type": "string",
                        "title": "Link target",
                        "default": "https://www.nespresso.com"
                      }
                    }
                  },
                  "video": {
                    "type": "object",
                    "title": "Video",
                    "required": [
                      "a11y_play_video",
                      "video_id",
                      "video_mobile",
                      "display_ui_controls",
                      "cc_policy_language",
                      "video_service"
                    ],
                    "options": {
                      "collapsed": true
                    },
                    "properties": {
                      "a11y_play_video": {
                        "type": "string",
                        "title": "a11y Play Video",
                        "default": "Play video"
                      },
                      "video_id": {
                        "type": "string",
                        "title": "Video provider ID",
                        "description": "Video id of the choose video service",
                        "default": ""
                      },
                      "video_mobile": {
                        "type": "string",
                        "title": "Video provider ID (Mobile)",
                        "description": "Video id of the choose video service for mobile devices (if different)",
                        "default": ""
                      },
                      "display_ui_controls": {
                        "type": "string",
                        "title": "Video UI Controls",
                        "description": "Video service (Youtube)",
                        "options": {
                          "enum_titles": [
                            "Yes",
                            "No"
                          ]
                        },
                        "enum": [
                          "1",
                          "0"
                        ],
                        "default": "1"
                      },
                      "cc_policy_language": {
                        "type": "string",
                        "title": "Language of Closed caption",
                        "description": "Language of closed caption of Youtube video, Ex- es-Es, en",
                        "default": ""
                      },
                      "video_service": {
                        "type": "string",
                        "title": "Video services",
                        "description": "Video service (Youtube, Youku)",
                        "options": {
                          "enum_titles": [
                            "Youtube",
                            "Youku"
                          ]
                        },
                        "enum": [
                          "youtube",
                          "youku"
                        ],
                        "default": "youtube"
                      }
                    },
                    "default": ""
                  }
                }
              },
              "card": {
                "type": "object",
                "options": {
                  "collapsed": true
                },
                "properties": {
                  "heading": {
                    "type": "string",
                    "title": "Heading",
                    "default": "Latte Macchiato Speculoos"
                  },
                  "time": {
                    "type": "string",
                    "title": "Time",
                    "default": "3 min"
                  },
                  "difficulty": {
                    "type": "string",
                    "title": "difficulty",
                    "default": "EASY"
                  },
                  "visual": {
                    "type": "object",
                    "required": [
                      "src",
                      "alt"
                    ],
                    "title": "Visual",
                    "options": {
                      "collapsed": true
                    },
                    "properties": {
                      "src": {
                        "type": "object",
                        "required": [
                          "desktop"
                        ],
                        "title": "Visual source",
                        "options": {
                          "collapsed": true
                        },
                        "properties": {
                          "desktop": {
                            "type": "string",
                            "title": "Desktop visual source",
                            "default": "/shared_res/agility/next-components/assets/card/recipe/visual.jpg"
                          }
                        }
                      },
                      "alt": {
                        "type": "string",
                        "title": "Visual alternative text",
                        "default": "Recipe"
                      }
                    }
                  }
                }
              }
            },
            "default": {
              "card": {
                "heading": "Latte Macchiato Speculoos",
                "time": "3 min",
                "difficulty": "EASY",
                "visual": {
                  "src": {
                    "desktop": "https://www.nespresso.com/shared_res/agility/next-components/assets/card/recipe/visual_large.png"
                  },
                  "alt": "Recipe Result"
                },
                "single": "true"
              },
              "modal": {
                "link": {
                  "label": "Go to recipe page",
                  "target": "https://www.nespresso.com"
                },
                "header": {
                  "heading": "Iced Latte Salted Caramel",
                  "subheading": "Easy to create, easy to enjoy. It’s all about having a refreshing moment with Ice Leggero and this tasteful iced Caramel Latte.",
                  "metas": {
                    "time": "2 min",
                    "difficulty": "Easy"
                  }
                },
                "requirements": {
                  "heading": "What you need",
                  "ingredients": {
                    "heading": "Ingredients",
                    "items": [
                      {
                        "label": "Ginger",
                        "proportion": "10gr"
                      },
                      {
                        "label": "Sprigs of thyme",
                        "proportion": ""
                      },
                      {
                        "label": "Freshly ground salt and pepper",
                        "proportion": ""
                      }
                    ]
                  },
                  "materials": {
                    "heading": "Materials",
                    "items": [
                      {
                        "label": "Vertuo Coffee Mug",
                        "visual": {
                          "src": {
                            "desktop": "https://www.nespresso.com/shared_res/agility/next-components/assets/recipes/material.png"
                          },
                          "alt": "Vertuo Coffee Mug"
                        }
                      }
                    ]
                  }
                },
                "instructions": {
                  "heading": "How to make",
                  "steps": [
                    {
                      "heading": "For the vanilla coffee oil",
                      "substeps": [
                        {
                          "text": "In an empty bottle, put the oil, grapeseed, ground coffee and vanilla",
                          "visual": {}
                        },
                        {
                          "text": "Infuse",
                          "visual": {}
                        }
                      ]
                    },
                    {
                      "heading": "For the sliced squash",
                      "substeps": [
                        {
                          "text": "Peel the squash",
                          "visual": {
                            "src": {
                              "desktop": "https://www.nespresso.com/shared_res/agility/next-components/assets/recipes/visual.png"
                            },
                            "alt": "ping"
                          }
                        },
                        {
                          "text": "Cut 4 slices 2cm thick and detail using a cookie cutter to 7cm in diameter",
                          "visual": {}
                        }
                      ]
                    }
                  ]
                },
                "visual": {
                  "src": {
                    "mobile": "https://www.nespresso.com/shared_res/agility/next-components/assets/recipes/video_S.png",
                    "desktop": "https://www.nespresso.com/shared_res/agility/next-components/assets/recipes/video_L.png"
                  },
                  "alt": "Video"
                }
              }
            }
          },
          "default": [
            {
