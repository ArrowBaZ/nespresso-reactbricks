        "alternative_logo": {
          "type": "string",
          "title": "Heading Logo",
          "description": "Replaces text with a logo.  https://wiki.nespresso.com/x/omMHCQ > Ranges Logo https://wiki.nespresso.com/x/Pr_xC > OL Logo https://wiki.nespresso.com/x/Tb_xC > VL Logo",
